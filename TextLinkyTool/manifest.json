{
  "manifest_version": 2,
  "name": "Text Linky Tool",
  "version": "1.0.0",  
  "author": "Yuki GUO",
  "homepage_url": "https://github.com/Yukisama/TextLinkyTool",
 
  "applications": {
    "gecko": {
	  "strict_min_version": "56.0"
    }
  },
  "description": "A useful tool for web links.",
  "default_locale": "en",

  "icons": {
    "48": "icons/icon48.png",
	"96": "icons/icon96.png"
  },
  
  "permissions": [
	"<all_urls>",
	"menus",  
	"contextMenus",
	"tabs",
	"activeTab",
	"clipboardWrite"
  ],
  
  "background": {
	"scripts": ["background.js"]
  }

}