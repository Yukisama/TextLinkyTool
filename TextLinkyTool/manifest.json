{
  "manifest_version": 2,
  "name": "Text Linky Tool",
  "version": "1.0.5",
  "author": "Yuki GUO",
  "homepage_url": "https://github.com/Yukisama/TextLinkyTool",
  "applications": {
    "gecko": {
      "id": "{3efee51a-7d3b-4412-a889-addc6ff6276b}", 
      "strict_min_version": "56.0"    }
  },
  "description": "A useful tool for web links.",
  "default_locale": "en",

  "icons": {
    "48": "icons/icon48.png",
    "96": "icons/icon96.png"
  },

  "permissions": [
    "<all_urls>",
    "menus",
    "contextMenus",
    "tabs",
    "activeTab",
    "clipboardWrite",
    "storage"
  ],

  "background": {
    "scripts": ["background.js"]
  },

  "content_scripts": [
    {
      "js": ["content.js"],
      "matches": ["<all_urls>"],
      "all_frames": true
    }
  ],

  "options_ui": {
    "page": "options.html",
    "browser_style": true
  }

}
